<h3>{{viewTitle}}</h3>

<form action="/book" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{book._id}}">
<div class="form-group">
    <label>Book Name</label>
    <input type="text" class="form-control" name="bookName" placeholder="Book Name" value="{{book.bookName}}">
</div>
<div class="form-group">
    <label>Author Name</label>
    <input type="text" class="form-control" name="author" placeholder="Author Name" value="{{book.author}}">
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Publishing Year</label>
         <input type="text" class="form-control" name="year" placeholder="publishing year" value="{{book.year}}">
    </div>
    <div class="form-group col-md-6">
        <label>Language</label>
         <input type="text" class="form-control" name="language" placeholder="Language" value="{{book.language}}">
    </div>
</div>
<div class="form-group">
<button type="submit" class="btn btn-info">Submit</button>
<a class="btn btn-secondary" href="/book/list">View All</a>
</div>
</form>